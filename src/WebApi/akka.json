{
    "akka": {
        "actor": {
            "serializers": {
                "hyperion": "Akka.Serialization.HyperionSerializer, Akka.Serialization.Hyperion"
            },
            "serialization-bindings": {
                "System.Object": "hyperion"
            },
            "deployment": {
                "/analysis": {
                    "router": "round-robin-pool",
                    "resizer": {
                        "enabled": "on",
                        "lower-bound": 5,
                        "upper-bound": 30
                    }
                },
                "/api/tweets": {
                    "router": "round-robin-pool",
                    "resizer": {
                        "enabled": "on",
                        "lower-bound": 5,
                        "upper-bound": 30
                    }
                }
            }
        }
    }
}
